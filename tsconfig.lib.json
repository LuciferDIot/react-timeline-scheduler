{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/App.tsx",
    "src/main.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
